<% include partials/header %>

<h1>Compose</h1>
<form class="" action="/compose" method="post">

    <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle" placeholder="Journal Title" autofocus="on">
        <label>Post</label>
        <textarea cols="40" rows="5" class="form-control" name="postBody" placeholder="Type new Journal"></textarea>
    </div>
    
    <button class="btn btn-primary" type="submit" name="button">Publish</button>
</form>

